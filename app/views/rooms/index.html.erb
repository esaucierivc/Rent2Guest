<p id="notice"><%= notice %></p>

<h1>Listing Rooms</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Rules</th>
      <th>Minimum_days</th>
      <th>City</th>
      <th>Address</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>user id</th>
      <th>Authorized</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.name %></td>
        <td><%= room.description  %></td>
        <td><%= room.price %></td>
        <td><%= room.rules %></td>
        <td><%= room.minimum_days%></td>
        <td><%= room.city_id%></td>
        <td><%= room.address %></td>
        <td><%= room.latitude %></td>
        <td><%= room.longitude %></td>
        <td><%= room.user_id %></td>
        <td><%= room.is_authorized %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

